@page "/encaminhaProjeto"

<div class="form-group d-flex justify-content-center">

<div class="container">
    <br>
    <h1 class="display"style="text-align:center">Finalizar Projeto</h1>
    <br>
    <form> 
        <div class="form-group"style="margin-top:25px;">
            <div class="col-md-6 offset-md-3" style="margin-top:25px;">
            <textarea class="form-control" id="cons" rows="5" placeholder="Digite as considerações finais do projeto!"></textarea>
            </div>
        </div> 

        <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <label for="exampleInputFile"style="text-align:center">Faça o Upload da documentação!</label>
            <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
        </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label > Link do projeto BitBucket </label>
                <input type="text" name="link" class="form-control " placeholder="Link do Projeto" required="" >    
            </div>
    </div>
    <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <button type="button" class="btn btn-info">Enviar</button>
               
            </div>
        </div>
    </form> 
</div>
</div>