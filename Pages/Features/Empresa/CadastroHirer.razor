@page "/cadastroEmpresa"
@using CooperativaXZ
@inject UserService userApi
@inject NavigationManager navigation
@using System.Net.Http
@inject HttpClient Http

<div class="form-group d-flex justify-content-center">

    <div class="container">
        <br>
        <h1 class="display" style="text-align:center">Cadastro</h1>
        <br>
        

            <div class="form-group" style="margin-top:25px;">
                <div class="col-md-6 offset-md-3">
                    <label> Nome </label>
                    <input  type="text" name="name" class="form-control " placeholder="Nome" required="">
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <label> CNPJ </label>
                    <input type="text" name="cnpj" class="form-control " placeholder="CNPJ" required="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <label> MEI </label>
                    <input  type="text" name="mei" class="form-control " placeholder="MEI" required="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <label> Crie sua senha </label>
                    <input  type="password" name="password" class="form-control" placeholder="Senha" required="">
                    <small id="passHelp" class="form-text text-muted">(A senha deve ter de 8 a 16 caracteres, misturando letras e números.)</small>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <label> Confirme sua senha </label>
                    <input type="password" name="password" class="form-control" placeholder="Senha Confirmação" required="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-info">
                        Cadastrar
                    </button>
                </div>
            </div>
    </div>
</div>


