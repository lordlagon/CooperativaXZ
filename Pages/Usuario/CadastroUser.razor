@page "/cadastro"

<div class="form-group d-flex justify-content-center">

<div class="container">
    <br>
    <h1 class="display"style="text-align:center">Cadastro</h1>
    <br>
    <form> 

        <div class="form-group"style="margin-top:25px;">
            <div class="col-md-6 offset-md-3">
                <label > Nome </label>
                <input type="text" name="name" class="form-control " placeholder="Nome" required="" >    
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label > E-mail </label>
                <input type="text" name="email" class="form-control " placeholder="E-mail" required="" >    
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label > CPF </label>
                <input type="text" name="cpf" class="form-control " placeholder="CPF" required="" >    
            </div>
        </div>     

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label> Crie sua senha </label>  
                <input type="password" name="password" class="form-control" placeholder="Senha" required="">
                <small id="passHelp" class="form-text text-muted">(A senha deve ter de 8 a 16 caracteres, misturando letras e números.)</small>
            </div>
        </div> 

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label> Confirme sua senha </label>  
                <input type="password" name="password" class="form-control" placeholder="Senha Confirmação" required="">
            </div>
        </div> 

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <button type="button" class="btn btn-info">Cadastrar</button>
               
            </div>
        </div>
    </form> 
</div>
</div>